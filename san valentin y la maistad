    <script>
        // Crear corazones flotantes
        function createHearts() {
            const container = document.getElementById('backgroundHearts');
            const heartSymbols = ['‚ù§Ô∏è', 'üíñ', 'üíó', 'üíì', 'üíï', 'üíû', 'üíò', 'üíù'];
            
            for (let i = 0; i < 30; i++) {
                const heart = document.createElement('div');
                heart.className = 'heart';
                heart.innerHTML = heartSymbols[Math.floor(Math.random() * heartSymbols.length)];
                heart.style.left = Math.random() * 100 + '%';
                heart.style.top = Math.random() * 100 + '%';
                heart.style.fontSize = (Math.random() * 2 + 1) + 'rem';
                heart.style.animationDuration = (Math.random() * 4 + 4) + 's';
                heart.style.animationDelay = Math.random() * 2 + 's';
                container.appendChild(heart);
            }
        }

        // Array de mensajes rom√°nticos
        const romanticMessages = [
            "Cada momento a tu lado es especial. üíï",
            "Tu sonrisa ilumina mis d√≠as. ‚ú®",
            "Eres la raz√≥n de mi felicidad. üåü",
            "Contigo, cada d√≠a es San Valent√≠n. üíù",
            "Mi persona favorita en el mundo. üíñ",
            "Gracias por existir. üåπ",
            "Eres mi sue√±o hecho realidad. üíó",
            "Te elijo hoy y siempre. üíì"
        ];

        // Mostrar mensaje aleatorio
        function showRandomMessage() {
            const randomIndex = Math.floor(Math.random() * romanticMessages.length);
            const messageDisplay = document.getElementById('messageDisplay');
            messageDisplay.innerHTML = romanticMessages[randomIndex] + ' <span>¬°Te quiero mucho! ‚ù§Ô∏è</span>';
            
            // Animaci√≥n adicional
            messageDisplay.style.transform = 'scale(1.05)';
            setTimeout(() => {
                messageDisplay.style.transform = 'scale(1)';
            }, 200);
        }

        // Contador de latidos interactivo
        let heartbeatCount = 143;
        const heartbeatElement = document.getElementById('heartbeatCount');
        
        setInterval(() => {
            heartbeatCount += Math.floor(Math.random() * 3) + 1;
            heartbeatElement.textContent = heartbeatCount;
        }, 3000);

        heartbeatElement.addEventListener('click', function() {
            heartbeatCount += 10;
            this.textContent = heartbeatCount;
            this.style.animation = 'none';
            this.offsetHeight; // Trigger reflow
            this.style.animation = 'numberPop 1s ease infinite';
        });

        // Funci√≥n para mostrar sorpresa
        function showSurprise() {
            const modal = document.getElementById('surpriseModal');
            const modalText = document.getElementById('modalText');
            const modalHeart = document.getElementById('modalHeart');
            
            const surprises = [
                { heart: 'üíù', text: '¬°Eres la persona m√°s especial del mundo! <strong>Te quiero</strong>' },
                { heart: 'üåπ', text: 'Una rosa para la persona m√°s hermosa. <strong>Eres √∫nica</strong>' },
                { heart: 'üéÅ', text: 'Un regalo muy especial: <strong>todo mi cari√±o</strong>' },
                { heart: 'üíå', text: 'Una carta de amor para ti: <strong>Eres incre√≠ble</strong>' },
                { heart: '‚ú®', text: 'Hoy y siempre: <strong>mi coraz√≥n es tuyo</strong>' }
            ];
            
            const randomSurprise = surprises[Math.floor(Math.random() * surprises.length)];
            modalHeart.innerHTML = randomSurprise.heart;
            modalText.innerHTML = randomSurprise.text;
            
            modal.style.display = 'flex';
            
            // Crear mini corazones al hacer clic
            for (let i = 0; i < 5; i++) {
                setTimeout(() => {
                    createMiniHeart();
                }, i * 100);
            }
        }

        // Crear mini corazones animados
        function createMiniHeart() {
            const heart = document.createElement('div');
            heart.innerHTML = '‚ù§Ô∏è';
            heart.style.position = 'fixed';
            heart.style.left = Math.random() * 100 + '%';
            heart.style.bottom = '0';
            heart.style.fontSize = '2rem';
            heart.style.zIndex = '1001';
            heart.style.animation = 'float 2s ease-out forwards';
            document.body.appendChild(heart);
            
            setTimeout(() => {
                heart.remove();
            }, 2000);
        }

        // Cerrar modal
        function closeModal() {
            document.getElementById('surpriseModal').style.display = 'none';
        }

        // Mostrar mensaje al hacer clic en fotos
        function showPhotoMessage(photoNumber) {
            const modal = document.getElementById('surpriseModal');
            const modalText = document.getElementById('modalText');
            const modalHeart = document.getElementById('modalHeart');
            
            const photoMessages = {
                1: { heart: 'üì∏', text: 'Este recuerdo es <strong>muy especial</strong> para m√≠' },
                2: { heart: 'üíï', text: 'Cada momento juntos es <strong>√∫nico</strong>' },
                3: { heart: 'üåπ', text: 'Eres tan hermosa como <strong>mil rosas</strong>' },
                4: { heart: 'üíå', text: 'Esta carta guarda <strong>todos mis sentimientos</strong>' }
            };
            
            modalHeart.innerHTML = photoMessages[photoNumber].heart;
            modalText.innerHTML = photoMessages[photoNumber].text;
            modal.style.display = 'flex';
        }

        // Cerrar modal al hacer clic fuera
        window.onclick = function(event) {
            const modal = document.getElementById('surpriseModal');
            if (event.target == modal) {
                modal.style.display = 'none';
            }
        }

        // Inicializar corazones
        createHearts();

        // Mensaje de bienvenida
        console.log('‚ù§Ô∏è ¬°Feliz San Valent√≠n! ‚ù§Ô∏è');
    </script>
